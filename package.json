{
  "name": "nextjs-blog-theme",
  "description": "A customizable Next.js and Tailwind blog starter. Designed by the Bejamas agency.",
  "author": "Bejamas and Netlify Inc.",
  "contributors": [
    "Charlie Gerard",
    "Prince Wilson",
    "Tara Manicsic",
    "Thom Krupa",
    "Tomas Bankauskas"
  ],
  "homepage": "https://github.com/netlify-templates/nextjs-blog-theme",
  "bugs": {
    "url": "https://github.com/netlify-templates/nextjs-blog-theme/issues"
  },
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./posts",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "optimize:images": "node scripts/optimize-images.js",
    "postbuild": "next-sitemap",
    "git:setup": "node scripts/setup-git-hooks.js",
    "git:commit": "node scripts/auto-commit.js",
    "git:auto": "npm run git:commit && echo 'Auto-commit completed'",
    "dev:auto": "npm run git:setup && npm run dev"
  },
  "dependencies": {
    "@mapbox/rehype-prism": "^0.9.0",
    "@next/bundle-analyzer": "^15.3.5",
    "@next/eslint-plugin-next": "^15.3.5",
    "@next/third-parties": "^15.3.5",
    "@tailwindcss/typography": "^0.5.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@vercel/analytics": "^1.5.0",
    "classnames": "^2.3.1",
    "critters": "^0.0.23",
    "eslint-plugin-security": "^3.0.1",
    "gray-matter": "^4.0.3",
    "helmet": "^8.1.0",
    "next": "^15.1.4",
    "next-mdx-remote": "^5.0.0",
    "next-pwa": "^5.6.0",
    "next-remote-watch": "2.0.0",
    "next-themes": "^0.4.6",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-unwrap-images": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.34.2",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@stackbit/cms-git": "^1.0.32",
    "@stackbit/types": "^2.0.1",
    "@tailwindcss/postcss": "^4.0.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.16",
    "typescript": "^5.1.3"
  },
  "license": "MIT"
}
